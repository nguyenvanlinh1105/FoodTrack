<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:fillViewport="true">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.activity_myOrders_ongoing_details">

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/btn_back_myorders_ongoing_detail"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_marginTop="5dp"

                    android:src="@drawable/icon_back_orange" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:text="Chi tiết đơn hàng"
                    android:textAlignment="center"
                    android:textColor="@color/primary_color"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/chatIcon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="end"
                    android:src="@drawable/icon_chat"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@color/FFF4E9"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Tình trạng"
                    android:textColor="@color/brown"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tinhTrang_myOrders_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="Đang chờ xác nhận"
                    android:textColor="@color/brown"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/view_theoDoiTinhTrang_myOrders_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center">

                            <androidx.cardview.widget.CardView
                                android:layout_width="60dp"
                                android:layout_height="match_parent"
                                app:cardCornerRadius="13dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/cho_xu_ly" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center">

                            <androidx.cardview.widget.CardView
                                android:layout_width="60dp"
                                android:layout_height="match_parent"
                                app:cardCornerRadius="13dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/shipping" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center">

                            <androidx.cardview.widget.CardView
                                android:layout_width="60dp"
                                android:layout_height="match_parent"
                                app:cardCornerRadius="13dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/icon_check_tinh_trang" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center">
                            <View
                                android:layout_width="0dp"
                                android:layout_weight="3"
                                android:layout_height="2dp"/>
                            <TextView
                                android:id="@+id/tv_step_1_tinhTrang_myOrders_details"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@drawable/green_btn_bg"
                                android:fontFamily="sans-serif-medium"
                                android:paddingTop="4dp"
                                android:text="1"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="14sp" />
                            <View
                                android:id="@+id/view_after_step_1"
                                android:layout_width="0dp"
                                android:layout_weight="3"
                                android:layout_height="2dp"
                                android:background="@drawable/gray_btn_bg"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center">
                            <View
                                android:id="@+id/view_before_step_2"
                                android:layout_width="0dp"
                                android:layout_weight="3"
                                android:layout_height="2dp"
                                android:background="@drawable/gray_btn_bg"/>
                            <TextView
                                android:id="@+id/tv_step_2_tinhTrang_myOrders_details"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@drawable/gray_btn_bg"
                                android:fontFamily="sans-serif-medium"
                                android:paddingTop="4dp"
                                android:text="2"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="14sp" />
                            <View
                                android:id="@+id/view_after_step_2"
                                android:layout_width="0dp"
                                android:layout_weight="3"
                                android:layout_height="2dp"
                                android:background="@drawable/gray_btn_bg"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center">
                            <View
                                android:id="@+id/view_before_step_3"
                                android:layout_width="0dp"
                                android:layout_weight="3"
                                android:layout_height="2dp"
                                android:background="@drawable/gray_btn_bg"/>
                            <TextView
                                android:id="@+id/tv_step_3_tinhTrang_myOrders_details"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@drawable/gray_btn_bg"
                                android:fontFamily="sans-serif-medium"
                                android:paddingTop="4dp"
                                android:text="3"

                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="14sp" />
                            <View
                                android:id="@+id/view_after_step_3"
                                android:layout_width="0dp"
                                android:layout_weight="3"
                                android:layout_height="2dp" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center">          
                            <TextView
                                android:fontFamily="sans-serif-medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Đang xử lý"
                                android:textSize="12sp"
                                android:textColor="@color/brown"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center">
                            <TextView
                                android:fontFamily="sans-serif-medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Đang giao hàng"
                                android:textSize="12sp"
                                android:textColor="@color/brown"/>
                        </LinearLayout> <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">
                        <TextView
                            android:fontFamily="sans-serif-medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Đã hoàn thành"
                            android:textSize="12sp"
                            android:textColor="@color/brown"/>
                    </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/FFF4E9"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="Chi tiết"
                        android:textColor="@color/brown"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!--                    <ListView-->
                    <!--                        android:id="@+id/listView_myorders_details"-->
                    <!--                        android:layout_width="match_parent"-->
                    <!--                        android:layout_height="wrap_content" />-->
                    <LinearLayout
                        android:id="@+id/ll_list_myorders_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/sub_primary_color"
                    android:orientation="vertical"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tổng ("
                            android:textColor="@color/brown"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/so_luong_myOrders_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:textColor="@color/brown"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" món)"
                            android:textColor="@color/brown"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_tongTien_myOrders_details"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="40.000vnđ"
                            android:textAlignment="textEnd"
                            android:textColor="@color/brown"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phi dịch vụ"
                            android:textColor="@color/brown"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_phi_dich_vu_myOrders_detail"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="2.000vnđ"
                            android:textAlignment="textEnd"
                            android:textColor="@color/brown"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phi ship"
                            android:textColor="@color/brown"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_phi_ship_myOrders_detail"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="15.000vnđ"
                            android:textAlignment="textEnd"
                            android:textColor="@color/brown"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tổng cộng"
                            android:textColor="@color/brown"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_total_amount_myOrders_detail"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="57.000vnđ"
                            android:textAlignment="textEnd"
                            android:textColor="@color/brown"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/sub_primary_color"
                    android:orientation="vertical"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ghi chú"
                            android:textColor="@color/brown"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_ghi_chu_myOrders_detail"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Không có"
                            android:textAlignment="textEnd"
                            android:textColor="@color/brown"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mã đơn hàng"
                            android:textColor="@color/brown"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_ma_don_hang_myOrders_detail"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="#0000"
                            android:textAlignment="textEnd"
                            android:textColor="@color/brown"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thời gian đặt hàng"
                            android:textColor="@color/brown"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_thoi_gian_dat_myOrders_detail"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="12:00 19/9/2024"
                            android:textAlignment="textEnd"
                            android:textColor="@color/brown"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thanh toán"
                            android:textColor="@color/brown"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_thanh_toan_myOrders_detail"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Tiền mặt"
                            android:textAlignment="textEnd"
                            android:textColor="@color/brown"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_huy_myOrders_detail"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#ff5e00"
                android:text="Hủy đơn hàng"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>