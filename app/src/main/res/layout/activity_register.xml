<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:paddingTop="30dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="10dp"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#fff"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        tools:context=".Activity.Login">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="84dp"
            android:gravity="center"
            android:maxLines="2"
            android:text="Vui lòng nhập thông tin để tạo tài khoản."
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.465"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edt_hoTen_signin"
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:layout_marginTop="152dp"
            android:background="@drawable/edittext_conner"
            android:drawableLeft="@drawable/icons_name_24"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Họ và tên"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.51"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edt_Mail_signin"
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/edittext_conner"
            android:drawableLeft="@drawable/icon_mail24"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/edt_hoTen_signin"
            app:layout_constraintStart_toStartOf="@+id/edt_hoTen_signin"
            app:layout_constraintTop_toBottomOf="@+id/edt_hoTen_signin" />

        <EditText
            android:id="@+id/edt_SDT_signin"
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/edittext_conner"
            android:drawableLeft="@drawable/icon_phone_25"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Số điện thoại"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/edt_Mail_signin"
            app:layout_constraintStart_toStartOf="@+id/edt_Mail_signin"
            app:layout_constraintTop_toBottomOf="@+id/edt_Mail_signin" />

        <EditText
            android:id="@+id/edt_Password_signin"
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/edittext_conner"
            android:drawableRight="@drawable/icon_hide_password"
            android:ems="10"
            android:hint="Mật khẩu"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/edt_SDT_signin"
            app:layout_constraintStart_toStartOf="@+id/edt_SDT_signin"
            app:layout_constraintTop_toBottomOf="@+id/edt_SDT_signin" />

        <EditText
            android:id="@+id/edt_confirmPassword_signin"
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/edittext_conner"
            android:drawableRight="@drawable/icon_hide_password"
            android:ems="10"
            android:hint="Xác nhận mật khẩu"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/edt_Password_signin"
            app:layout_constraintStart_toStartOf="@+id/edt_Password_signin"
            app:layout_constraintTop_toBottomOf="@+id/edt_Password_signin" />

        <TextView
            android:id="@+id/btn_DangKi_TK"
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/btn_primary_conner"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:text="Đăng kí"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="350dp"
            android:layout_height="25dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_DangKi_TK">

            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:background="#000000"
                tools:layout_editor_absoluteX="40dp"
                tools:layout_editor_absoluteY="751dp" />

            <!-- Text in the center -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Hoặc tiếp tục với"
                android:textColor="@color/primary_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Right Horizontal Line -->
            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:background="#000000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:paddingBottom="50dp"
            android:weightSum="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Bạn đã có tài khoản?"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/btnDangNhap_formRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Đăng nhập ngay!"
                android:textColor="@color/primary_color"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="200dp"
            android:layout_height="64dp"
            android:layout_marginTop="28dp"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout"
            app:layout_constraintStart_toStartOf="@+id/linearLayout"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <!-- Biểu tượng Google -->
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@drawable/input_search_conner"
                android:padding="10dp"
                android:src="@drawable/icon_mail" />

            <!-- Biểu tượng Facebook -->
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@drawable/input_search_conner"
                android:padding="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:src="@drawable/icon_facebook24" />

            <!-- Biểu tượng Apple -->
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@drawable/input_search_conner"
                android:padding="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:src="@drawable/icon_twitter24" />

        </LinearLayout>

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.053"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icon_back" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:text="TẠO TÀI KHOẢN"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginTop="28dp"
            android:text="Giới tính"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/edt_confirmPassword_signin"
            app:layout_constraintTop_toBottomOf="@+id/edt_confirmPassword_signin" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.486"
            app:layout_constraintStart_toStartOf="@+id/edt_confirmPassword_signin"
            app:layout_constraintTop_toBottomOf="@+id/edt_confirmPassword_signin">

            <RadioButton
                android:id="@+id/radio_nam_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:text="Nam"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="46dp"
                tools:layout_editor_absoluteY="583dp" />

            <RadioButton
                android:id="@+id/radio_nu_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nữ"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="46dp"
                tools:layout_editor_absoluteY="583dp" />
        </RadioGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>