<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:paddingBottom="20dp">

    <ImageView
        android:id="@+id/img_item_myOrders_detail"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/carbonara"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_so_luong_myOrders_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="1"
        android:textSize="17sp"
        android:textColor="@color/brown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_item_myOrders_detail"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="x"
        android:textColor="@color/brown"
        android:textSize="17sp"
        app:layout_constraintStart_toEndOf="@+id/tv_so_luong_myOrders_detail"
        app:layout_constraintTop_toTopOf="@+id/tv_so_luong_myOrders_detail" />

    <TextView
        android:id="@+id/tv_ten_mon_myOrders_detail"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Cheesecake Việt quất"
        android:textSize="16sp"
        android:textColor="@color/brown"
        app:layout_constraintStart_toEndOf="@+id/tv_so_luong_myOrders_detail"
        app:layout_constraintTop_toTopOf="@+id/textView28" />

    <TextView
        android:id="@+id/tv_gia_myOrders_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50.000đ"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/brown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_ten_mon_myOrders_detail" />


</androidx.constraintlayout.widget.ConstraintLayout>