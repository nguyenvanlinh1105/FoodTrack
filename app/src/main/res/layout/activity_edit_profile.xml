<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".edit_profile"
    android:background="#FFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#FF5E00"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/btn_back_editProfile"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/icon_back_circle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="92dp"
        app:cardCornerRadius="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/avatar1" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/btn_primary_conner"
        android:padding="10dp"
        android:text="Đổi hình đại diện"
        android:textColor="#fff"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12"
        app:layout_constraintVertical_bias="0.0">

        <EditText
            android:id="@+id/tenTaiKhoan_editProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:background="@drawable/input_opacity_background"
            android:fontFamily="sans-serif-medium"
            android:paddingLeft="12sp"
            android:paddingTop="16sp"
            android:paddingBottom="16sp"
            android:text="TechTrio"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/ho_editProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:background="@drawable/input_opacity_background"
            android:fontFamily="sans-serif-medium"
            android:paddingLeft="12sp"
            android:paddingTop="16sp"
            android:paddingBottom="16sp"
            android:text="Tech"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/ten_editProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:background="@drawable/input_opacity_background"
            android:fontFamily="sans-serif-medium"
            android:paddingLeft="12sp"
            android:paddingTop="16sp"
            android:paddingBottom="16sp"
            android:text="Trio"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/email_editProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:background="@drawable/input_opacity_background"
            android:fontFamily="sans-serif-medium"
            android:paddingLeft="12sp"
            android:paddingTop="16sp"
            android:paddingBottom="16sp"
            android:text="techtrio123@gmail.com"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/diaChi_editProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:background="@drawable/input_opacity_background"
            android:drawableRight="@drawable/icon_location"
            android:fontFamily="sans-serif-medium"
            android:paddingLeft="12sp"
            android:paddingTop="16sp"
            android:paddingRight="12sp"
            android:paddingBottom="16sp"
            android:text="48 Cao Thắng, P.Thanh Bình, Q.Hải Châu..."
            android:textSize="16sp" />

        <EditText
            android:id="@+id/sdt_editProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18sp"
            android:background="@drawable/input_opacity_background"
            android:fontFamily="sans-serif-medium"
            android:paddingLeft="12sp"
            android:paddingTop="16sp"
            android:paddingBottom="16sp"
            android:text="01234567891"
            android:textSize="16sp" />
        <Button
            android:id="@+id/luuBtn_editProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF5E00"
            android:textSize="16sp"
            android:padding="12sp"
            android:text="Lưu"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>