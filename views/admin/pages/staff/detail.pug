extends ../../layouts/default.pug

block content 
    .container-fluid.mt-4
        .d-sm-flex.align-items-center.justify-content-between.mb-4
            h1.h3.mb-2.text-gray-800 <strong>Thông tin cá nhân</strong>
        // Page Heading
        p.mb-4
            | Thông tin cá nhân của Nhân viên
            .row
                // Column
                .col-lg-4.col-xlg-3.col-md-5
                    .card
                        .card-body
                            center.m-t-30
                                if(staff.avatar)
                                    img.img-profile.rounded-circle(src=`${staff.avatar}` style="width:350px")
                                else
                                    if(staff.gioiTinh==='Nam')
                                        img.img-profile.rounded-circle(src='/admin/images/undraw_profile.svg')
                                    else
                                        img.img-profile.rounded-circle(src='/admin/images/undraw_profile_3.svg')
                                h4.card-title.mt-3 #{staff.hoTen}
                                h6.card-subtitle #{staff.tenVaiTro}
                        div
                            hr
                        .card-body
                            small.text-muted Email 
                            h6 #{staff.email}
                            small.text-muted.p-t-30.db Số điện thoại
                            h6 #{staff.sdt}
                            small.text-muted.p-t-30.db Địa chỉ
                            h6 48 Cao Thắng
                            .map-box
                                iframe(src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3833.7805804229524!2d108.21105927495516!3d16.07687208460371!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31421847f0d1243f%3A0xfe9e3527761db501!2zNDggQ2FvIFRo4bqvbmcsIFRoYW5oIELDrG5oLCBI4bqjaSBDaMOidSwgxJDDoCBO4bq1bmcgNTUwMDAwLCBWaeG7h3QgTmFt!5e0!3m2!1svi!2s!4v1731312904725!5m2!1svi!2s" width="350" height="350" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade")
                // Column end
                // Column start
                .col-lg-8.col-xlg-9.col-md-7
                    .card
                        .card-body
                            form.form-horizontal.form-material(action=`/admin/management/staff/detail/${staff.token}?_method=PATCH` method='post')
                                .form-group
                                    label.col-md-12 Họ tên
                                    .col-md-12
                                        input.form-control.form-control-line(type='text', placeholder='Họ tên', name='hoTen', value=staff.hoTen readonly)
                                .form-group
                                    label.col-md-12 Email
                                    .col-md-12
                                        input.form-control.form-control-line(type='email', placeholder='email', name='email', value=staff.email, readonly)
                                .form-group
                                    label.col-md-12 Số điện thoại
                                    .col-md-12
                                        input.form-control.form-control-line(type='text', placeholder='Số điện thoại', name='sdt', value=staff.sdt readonly)
                                .form-group
                                    label.col-md-12 Ngày sinh
                                    .col-md-12
                                        input.form-control.form-control-line(type='date', placeholder='Ngày sinh', name='ngaySinh', value=staff.ngaySinh readonly)
                                .form-group
                                    label.col-sm-12 Giới tính
                                    .col-sm-12
                                        select.form-control.form-control-line(name='gioiTinh' disabled)
                                            option(value='Nam' selected=(staff.gioiTinh == "Nam")) Nam
                                            option(value='Nữ' selected=(staff.gioiTinh == "Nữ") ) Nữ
                                .form-group
                                    label.col-md-12 Địa chỉ
                                    .col-md-12
                                        textarea.form-control.form-control-line(name='diaChi' placeholder='Nhập địa chỉ' rows='3' readonly)= staff.diaChi
                                .form-group 
                                    label.col-md-12 Vai trò
                                    .col-md-12
                                        select.form-control.form-control-line(name='vaiTro')
                                            each role in roles
                                                option(value=role.idVaiTro selected=(staff.vaiTro==role.idVaiTro)) #{role.tenVaiTro}
                                .form-group
                                    label.col-md-12 Ngày tạo tài khoản
                                    .col-md-12
                                        input.form-control.form-control-line(type='date', placeholder='Ngày tạo tài khoản', name='ngayTao', value=staff.ngayTao readonly)
                                // Column end
                                .form-group
                                    .col-sm-12
                                        button.btn.btn-success(type='submit')
                                            i.fas.fa-edit(style="margin-right: 5px;")
                                            | Cập nhật thông tin
