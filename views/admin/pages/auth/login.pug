doctype html
html
  head
    title Login Page
    // Made with love by Mutiullah Samim
    // Bootsrap 4 CDN
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css', integrity='sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO', crossorigin='anonymous')
    // Fontawesome CDN
    link(rel='stylesheet', href='https://use.fontawesome.com/releases/v5.3.1/css/all.css', integrity='sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU', crossorigin='anonymous')
    link(id="bootstrap-css" href='//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css', rel='stylesheet')
    link(rel="icon" type="image/x-icon" href="/admin/images/icon.jpg")
    link(rel='stylesheet', type='text/css', href='/admin/css/login.css')
  body
    .container
      .d-flex.justify-content-center.h-100
        .card
          .card-header
            h3 Sign In
            .d-flex.justify-content-end.social_icon
              span
                i.fab.fa-facebook-square
              span
                i.fab.fa-google-plus-square
              span
                i.fab.fa-twitter-square
          .card-body
            form( action=`/${prefixAdmin}/login`
                  method="POST"
                )
              .input-group.form-group
                .input-group-prepend
                  span.input-group-text
                    i.fas.fa-envelope
                input.form-control(
                  type='email'  
                  id="email"
                  name="email"
                  required 
                  placeholder='Email'
                )
              .input-group.form-group
                .input-group-prepend
                  span.input-group-text
                    i.fas.fa-key
                input.form-control(
                  type='password'
                  id="password"
                  name="password"
                  placeholder='Password'
                )
              .row.align-items-center.remember
                input(type='checkbox')
                | Remember Me
              .form-group
                input.btn.float-right.login_btn(type='submit', value='Login')
          | &#x9;&#x9;&#x9;
          .card-footer
            .d-flex.justify-content-center.links
              | Don&apos;t have an account?
              a(href='#') Sign Up
            .d-flex.justify-content-center
              a(href='#') Forgot your password?
    script(src='//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js')