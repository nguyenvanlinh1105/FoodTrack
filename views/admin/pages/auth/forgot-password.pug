extends ../../layouts/auth.pug
block content
  .card-header
    h3 Quên mật khẩu
    .d-flex.justify-content-end.social_icon
      span
        i.fab.fa-facebook-square
      span
        i.fab.fa-google-plus-square
      span
        i.fab.fa-twitter-square
  .card-body
    form( action=`/${prefixAdmin}/password/forgot`
          method="POST"
        )
      .input-group.form-group
        .input-group-prepend
          span.input-group-text
            i.fas.fa-envelope
        input.form-control(
          type='email'  
          id="email"
          name="email"
          required 
          placeholder='Email'
        )
      .input-group.form-group
        div(class="g-recaptcha" data-sitekey=site_key)
      .form-group
        input.btn.float-right.login_btn(type='submit', value='Xác thực Email')
  | &#x9;&#x9;&#x9;