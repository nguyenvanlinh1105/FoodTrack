extends ../../layouts/auth.pug
block content
  .card-header
    h3 Xác nhận OTP
    .d-flex.justify-content-end.social_icon
      span
        i.fab.fa-facebook-square
      span
        i.fab.fa-google-plus-square
      span
        i.fab.fa-twitter-square
  .card-body
    form( action=`/${prefixAdmin}/password/otp`
          method="POST"
          onsubmit="enableEmailInput()"
        )
      .input-group.form-group
        .input-group-prepend
          span.input-group-text
            i.fas.fa-envelope
        input.form-control(
          type='email'  
          id="email"
          name="email"
          required 
          placeholder='Email'
          disabled
          value=email
        )
      .input-group.form-group
        .input-group-prepend
          span.input-group-text
            i.fas.fa-barcode
        input.form-control(
          type='text'  
          id="otp"
          name="otp"
          required 
          placeholder='OTP'
        )
      .input-group.form-group
        div(class="g-recaptcha" data-sitekey=site_key)
      .form-group
        input.btn.float-right.login_btn(type='submit', value='Xác nhận mã OTP')
  | &#x9;&#x9;&#x9;