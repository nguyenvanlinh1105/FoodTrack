extends ../../layouts/auth.pug
block content
  .card-header
    h3 Đăng nhập
    .d-flex.justify-content-end.social_icon
      span
        i.fab.fa-facebook-square
      span
        i.fab.fa-google-plus-square
      span
        i.fab.fa-twitter-square
  .card-body
    form( action=`/${prefixAdmin}/login`
          method="POST"
        )
      .input-group.form-group
        .input-group-prepend
          span.input-group-text
            i.fas.fa-envelope
        input.form-control(
          type='email'  
          id="email"
          name="email"
          required 
          placeholder='Email'
        )
      .input-group.form-group
        .input-group-prepend
          span.input-group-text
            i.fas.fa-key
        input.form-control(
          type='password'
          id="password"
          name="password"
          placeholder='Mật khẩu'
        )
      .row.align-items-center.remember
        input(type='checkbox')
        | Remember Me
      .form-group
        input.btn.float-right.login_btn(type='submit', value='Đăng nhập')
  | &#x9;&#x9;&#x9;
  .card-footer
    .d-flex.justify-content-center
      a(href=`/${prefixAdmin}/password/forgot`) Quên mật khẩu?